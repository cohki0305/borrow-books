doctype html
html
  head
    title
      | BooksProject
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag('assets/favicon.ico')
  body
    header
      .navigation-bar
        .continer
          .row
            .col-md-2
              =link_to root_path do
                i.fa.fa-amazon.fa-3x
            form.search-form.col-md-offset-1.col-md-6[action="/" name="search" method="get"]


            .col-md-1
              - if user_signed_in?
                =link_to destroy_user_session_path, class: "login-logout", method: 'delete' do
                  |  Logout
              - else
                =link_to new_user_session_path class: "login-logout" do
                  |  Login
            .col-md-2
              - if user_signed_in?
                = link_to gravatar_for(current_user, options = { size: 40 }), user_profile_path
    .container
      = bootstrap_flash
    = yield
    .plus
      |  + 
